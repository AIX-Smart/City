<?xml version="1.0" encoding="utf-8"?>
<com.aix.city.view.PostView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/post" android:orientation="vertical"
    android:layout_width="fill_parent" android:layout_height="fill_parent">

    <TextView android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="TEXT ONE"
        android:padding="20dip"
        android:background="@android:color/background_light"
        android:clickable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="like"
        android:id="@+id/likeButton"
        android:layout_gravity="right"
        android:layout_below="@id/content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <FrameLayout
        android:id="@+id/commentCounterLayout"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:minWidth="32dp"
        android:layout_below="@id/content"
        android:layout_toLeftOf="@+id/likeButton"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/commentCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="24sp"
            android:gravity="center"
            android:onClick="onClick"
            android:clickable="true"/>
    </FrameLayout>


    <TextView android:padding="20dip"
        android:background="@android:color/background_light"
        android:id="@+id/locationName"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="TEXT TWO"
        android:layout_below="@id/content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/commentCounterLayout"
        android:onClick="onClick"
        android:clickable="true"/>

</com.aix.city.view.PostView>

