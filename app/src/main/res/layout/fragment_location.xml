<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.aix.city.LocationProfileFragment">

        <TextView
            android:id="@+id/location_name"
            android:text="@string/locationProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="start|top"/>

        <LinearLayout
            android:id="@+id/post_like"
            android:layout_width="52dp"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:layout_toRightOf="@id/location_name"
            android:layout_toEndOf="@id/location_name"
            android:orientation="vertical"
            android:layout_margin="0dp"
            android:padding="8dp" >

            <ImageButton
                android:id="@+id/post_like_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@null"
                android:src="@drawable/btn_like"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/btn_like_description"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/post_like_counter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@android:color/white"
                android:textSize="@dimen/post_like_counter_size"
                android:singleLine="true"
                android:padding="0dp"
                android:layout_gravity="center_horizontal"
                android:clickable="false" />

        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/location_gpsIcon"
            android:layout_width="@dimen/post_comment_icon_size"
            android:layout_height="@dimen/post_comment_icon_size"
            android:background="@drawable/gps_schwarz"
            android:contentDescription="@string/post_gps_description"
            android:focusable="false"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginBottom="4dp"
            android:layout_marginEnd="3dp"
            android:layout_marginRight="3dp"/>

        <TextView
            android:id="@+id/location_address"
            android:text="@string/locationProfile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_toEndOf="@id/location_gpsIcon"
            android:layout_toRightOf="@id/location_gpsIcon"/>

    </RelativeLayout>
</LinearLayout>