<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawerLayout"
    android:layout_alignParentTop="true"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".LocationActivity">

        <fragment
            android:id="@+id/location_fragment"
            android:name="com.aix.city.LocationProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_location"/>

        <fragment
            android:id="@+id/headlines_fragment"
            android:name="com.aix.city.ListingFragment"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/location_fragment"
            tools:layout="@layout/fragment_listing_list"/>


    </RelativeLayout>

    <ListView android:layout_height="match_parent"
        android:layout_width="250dp"
        android:layout_gravity="left"
        android:id="@+id/list_menue"
        android:background="@color/accent_material_light">

    </ListView>

    <ListView android:layout_height="match_parent"
        android:layout_width="250dp"
        android:layout_gravity="right"
        android:id="@+id/list_userProfile"
        android:background="@color/accent_material_light">

    </ListView>

</android.support.v4.widget.DrawerLayout>

